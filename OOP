#include <iostream>

using namespace std;

class Gun {
    private:
    string name_gun;
    int money;
    
    public:
    void Auxiliary_guns(Gun array_gun[]);
    void SMG_guns(Gun array_gun[]);
    void Rifle_guns(Gun array_gun[]);
    void Sniper_guns(Gun array_gun[]);
    void Shotgun_guns(Gun array_gun[]);
    void Heavy_guns(Gun array_gun[]);

    void name_vaule(string Name, int Money) {
        name_gun = Name;
        money = Money;
    }
    friend ostream& operator << (ostream& out, Gun x);
};

struct Arrour : Gun {
    void arrour(Arrour array[]);
};

ostream& operator << (ostream& out, Gun x) {
    out << x.name_gun << ": " << x.money << " Credit";
    out << endl;
}

void Gun::Auxiliary_guns(Gun array_gun[]) {
    array_gun[0].name_vaule("Classic", 0);
    array_gun[1].name_vaule("Shorty", 150);
    array_gun[2].name_vaule("Frenzy", 450);
    array_gun[3].name_vaule("Ghost", 500);
    array_gun[4].name_vaule("Sheriff", 800);
}

void Gun::SMG_guns(Gun array_gun[]) {
    array_gun[0].name_vaule("Stinger", 1000);
    array_gun[1].name_vaule("Spectre", 1600);
}

void Gun::Rifle_guns(Gun array_gun[]) {
    array_gun[0].name_vaule("Bulldog", 2100);
    array_gun[1].name_vaule("Guardian", 2700);
    array_gun[2].name_vaule("Phantom", 2900);
    array_gun[3].name_vaule("Vandal", 2900);
}

void Gun::Sniper_guns(Gun array_gun[]) {
    array_gun[0].name_vaule("Marshal", 1100);
    array_gun[1].name_vaule("Operator", 4900);
}

void Gun::Shotgun_guns(Gun array_gun[]) {
    array_gun[0].name_vaule("Bucky", 900);
    array_gun[1].name_vaule("Judge", 1500);
}

void Gun::Heavy_guns(Gun array_gun[]) {
    array_gun[0].name_vaule("Ares", 1700);
    array_gun[1].name_vaule("Odin", 3200);
}

void Arrour::arrour(Arrour array_arrour[]) {
    array_arrour[0].name_vaule("Small", 400);
    array_arrour[1].name_vaule("Big", 1000);
}

void Cout_Auxiliary() {
    Gun Auxiliary;
    Gun gun_Auxiliary[5];
    Auxiliary.Auxiliary_guns(gun_Auxiliary);

    for(int i = 0 ; i < 5 ; i++) {
        cout << gun_Auxiliary[i];
    }
}
void Cout_SMG() {
    Gun SMG;
    Gun gun_SMG[2];
    SMG.SMG_guns(gun_SMG);

    for(int i = 0 ; i < 2 ; i++) {
        cout << gun_SMG[i];
    }
}
void Cout_Rifle() {
    Gun Rifle;
    Gun gun_Rifle[4];
    Rifle.Rifle_guns(gun_Rifle);

    for(int i = 0 ; i < 4 ; i++) {
        cout << gun_Rifle[i];
    }
}
void Cout_Sniper() {
    Gun Sniper;
    Gun gun_Sniper[2];
    Sniper.Sniper_guns(gun_Sniper);

    for(int i = 0 ; i < 2 ; i++) {
        cout << gun_Sniper[i];
    }
}
void Cout_Shotgun() {
    Gun Shotgun;
    Gun gun_Shotgun[2];
    Shotgun.Shotgun_guns(gun_Shotgun);

    for(int i = 0 ; i < 2 ; i++) {
        cout << gun_Shotgun[i];
    }
}

void Cout_Heavy() {
    Gun Heavy;
    Gun gun_Heavy[2];
    Heavy.Heavy_guns(gun_Heavy);

    for(int i = 0 ; i < 2 ; i++) {
        cout << gun_Heavy[i];
    }
}

void Cout_Arrour() {
    Arrour arrour;
    Arrour arrour_array[2];
    arrour.arrour(arrour_array);

    for(int i = 0 ; i < 2 ; i++) {
        cout << arrour_array[i];
    }
}


int main() {
    Cout_Arrour();
}
